<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RobotManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RobotManager.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="RobotManager">

    <TabBar>
        <Tab Title="Home">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
        <Tab Title="Robots">
            <ShellContent Title="Robots" ContentTemplate="{DataTemplate local:RobotsPage}" Route="RobotsPage"/>
        </Tab>
    </TabBar>

</Shell>
