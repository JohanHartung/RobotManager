<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RobotManager.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20,0"
            Spacing="25">
            <Frame BackgroundColor="#303030">
                <VerticalStackLayout>
                    <Label Text="Upcomming Games:" FontSize="20"/>
                    <CollectionView EmptyView="No games planned" Margin="0,10">

                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
            <Frame BackgroundColor="#303030">
                <VerticalStackLayout>
                    <Label Text="Robots in Clinic" FontSize="20"/>
                    <CollectionView EmptyView="No robots in clinic" Margin="0,10">

                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
